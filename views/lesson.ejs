<%- include('header.ejs') %>
<main id="content">

  <div class="breadcrumbs">
    <ol>
      <li class="">
          <a href="/">DDaT Codelabs</a>
      </li>
      <li class="">
          <a href="/module/<%= module.number %>"><%= module.title %></a>
      </li>
      <li class=""><%= lesson.title %></li>
    </ol>
  </div>

  <div class="grid-row">

    <div class="column-two-thirds">
      <h1 class="heading-large"><%= lesson.number %>. <%= lesson.title %></h1>
      <div class="lesson-content">
        <%- lesson.content %>
      </div>

      <% if (lesson.externalLinks.length > 0) { %>
        <h2 class="heading-medium">Additional resources</h2>
        <ul class="list list-bullet">
        <% for (var i = 0; i < lesson.externalLinks.length; i++) { %>
          <li><%= lesson.externalLinks[i] %></li>
        <% } %>
        </ul>
      <% } %>




    </div>

    <div class="column-one-third">
    </div>

  </div>
</main>
<%- include('footer.ejs') %>
