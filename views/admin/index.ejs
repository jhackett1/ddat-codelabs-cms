<%- include('../header.ejs') %>
<main id="content">

  <div class="grid-row">

    <div class="column-full">
      <h1 class="heading-xlarge">All modules</h1>



      <ol class="task-list">
        <% modulesList.forEach(function(module){ %>
          <li>
            <h2 class="task-list-section"><%= module.title %></h2>
            <p><%= module.description %></p>
          </li>
        <% }); %>
      </ol>



      <a class="button " href="/admin/module/new" role="button">Create new module</a>
    </div>

  </div>
</main>
