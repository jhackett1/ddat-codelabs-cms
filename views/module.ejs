<%- include('header.ejs') %>
<main id="content">

  <div class="breadcrumbs">
    <ol>
      <li class="">
          <a href="/">DDaT Codelabs</a>
      </li>
      <li class=""><%= module.title %></li>
    </ol>
  </div>

  <div class="grid-row">

    <div class="column-two-thirds">
      <h1 class="heading-xlarge"><%= module.title %> </h1>
      <p class="lede"><%= module.description %></p>

      <h2 class="heading-large">Lessons in this module</h2>
      <ol class="list">
        <%
          let sortedLessons = module.lessons.sort((a,b)=>{
            return a.number-b.number;
          })
        %>
        <% for (var i = 0; i < sortedLessons.length; i++) { %>
          <li>
            <%= sortedLessons[i].number %>. <a href="/module/<%= module.number %>/lesson/<%= module.lessons[i].number %>"><%= module.lessons[i].title %></a>
            <% if (sortedLessons[i].lessonType === 'Project task') { %> <strong class="phase-tag project-tag">PROJECT</strong><% } %>
            <% if (sortedLessons[i].lessonType === 'Video') { %> <strong class="phase-tag video-tag">VIDEO</strong><% } %>
          </li>
        <% } %>
      </ol>

    </div>

    <div class="column-one-third">
    </div>

  </div>
</main>
<%- include('footer.ejs') %>
